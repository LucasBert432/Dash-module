{
  "files": [],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ],

  "compilerOptions": {
    "jsx": "react-jsx", // Ou "react" se estiver usando React 17 ou anterior
    "target": "ESNext", // Define o target como ESNext
    "module": "ESNext", // Define o m√≥dulo como ESNext
    "esModuleInterop": true, // Permite interoperabilidade entre CommonJS e ESM
    "jsxImportSource": "@emotion/react",
    "moduleResolution": "bundler",
    "noEmit": true, // Or "emitDeclarationOnly": true
    "allowImportingTsExtensions": true,
    "types": [
      "jest",
      "@testing-library/jest-dom",
      "node",
      "@emotion/react/types/css-prop"
    ]
  }
}
